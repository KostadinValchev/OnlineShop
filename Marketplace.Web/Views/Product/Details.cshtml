<div class="container">

    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/bg_BG/sdk.js#xfbml=1&version=v2.8&appId=1813083162293390";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
    <article>
        <header>
            <h2>
                @Model.Make
            </h2>
        </header>
        <div class="col-md-6">
            <div class="col-md-6">
                <article>
                    @if (Model.Files.Any(f => f.FileType == Marketplace.Models.FileType.Avatar))
                    {

                        <dd>
                            <img src="~/File?id=@Model.Files.First(f => f.FileType == FileType.Avatar).Id"
                                 alt="avatar" width="500px" />

                        </dd>

                    }
                </article>
            </div>
        </div>
        <div class="col-md-6" style="margin-top: 10px; font-size: 20px" class="text-info">
            <p>
                <span class="glyphicon glyphicon-list-alt"></span> Model: @Model.Model
            </p>
            <p>
                <span class="glyphicon glyphicon-stats"></span> Material: @Model.Material
            </p>
            <p>
                <span class="glyphicon glyphicon-resize-full"></span> Number: @Model.Size
            </p>
            <p>
                <span class="glyphicon glyphicon-usd"></span> Price: <span class="text-danger">@Model.Price лв.</span>
            </p>

        </div>

        <div class="col-sm-12">
            <br />
            <article>
                <div class="pull-left">
                    <span class="glyphicon glyphicon-list-alt"></span>
                    <span>Description: @Model.Description</span>
                </div>
            </article>
        </div>

    </article>
    <p class="col-md-12">
        @Html.ActionLink("Order", "Create", "Orders", FormMethod.Post, new {id = Model.Id}) 
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
