@model  List<Marketplace.Models.Product>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        <h2>All Product - @Html.ActionLink("Create", "Create", "Product", null, new { @class = "btn btn-warning" })</h2>
        @foreach (var product in Model)
        {
            <div class="col-sm-6">
                <article>
                    <header>
                        <h2>
                            @Html.ActionLink(@product.Make, "Details", "Product", new {@id = product.Id}, null)
                        </h2>
                    </header>
                    <p>
                        @product.Description
                    </p>
                    <footer class="pull-right">

                    </footer>
                </article>
            </div>
        }
    </div>
</div>
<hr />
